{
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "editor.formatOnSave": false,
  "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 2, ColumnLimit: 80, AllowShortBlocksOnASingleLine: Always }",
  "sonarlint.pathToCompileCommands": "${workspaceFolder}/workspace/compile_commands.json"
}
